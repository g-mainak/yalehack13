<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

     	<%= f.label :bio %>
     	<%= f.text_area :bio, :style=>"height: 150px; width: 200px;", :class=>"edit-bio" %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary", :style=>"display:block;" %>
    <% end %>

  </div>
</div>